<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote" resource="default" engine="innodb">
        <column xsi:type="varchar" name="agreement_id" nullable="true" length="255" comment="Adobe Sign Agreement Id"/>
        <column xsi:type="boolean" name="sign_status" nullable="true"  comment="Adobe Sign Status"/>
        <column xsi:type="varchar" name="sign_url" nullable="true" length="500" comment="Adobe Sign Agreement Url"/>
    </table>
    <table name="sales_order" resource="default" engine="innodb">
        <column xsi:type="varchar" name="agreement_id" nullable="true" length="255" comment="Adobe Sign Agreement Id"/>
        <column xsi:type="boolean" name="sign_status" nullable="true"  comment="Adobe Sign Status"/>
        <column xsi:type="varchar" name="sign_url" nullable="true" length="500" comment="Adobe Sign Agreement Url"/>
    </table>
</schema>
