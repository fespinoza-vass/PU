<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
       	<css src="Webkul_Mpsplitcart::css/style.css"/>
	</head>
	<body>
	    <referenceBlock name="checkout.cart.form">
            <action method="setTemplate" ifconfig="marketplace/marketplacesplitcart_settings/mpsplitcart_enable">
                <argument name="template" xsi:type="string">Webkul_Mpsplitcart::mpsplitcart.phtml</argument>
            </action>
	    </referenceBlock>
		<referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="checkout.cart.validatesection" ifconfig="marketplace/marketplacesplitcart_settings/mpsplitcart_enable" template="Webkul_Mpsplitcart::updatecart.phtml" cacheable="false"/>
        </referenceContainer>
	</body>
</page>
