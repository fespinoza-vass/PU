<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="wolfsellers_headerlinks" sortOrder="150" showInWebsite="1" showInStore="1" showInDefault="1"
                 translate="label">
            <label>Botones de enlace - header</label>
            <tab>wolfsellers</tab>
            <resource>Magento_Config::config</resource>

            <group id="general" type="text" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1"
                   translate="label">
                <label>General</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>

            <group id="btn1" type="text" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1"
                   translate="label">
                <label>Botón 1</label>
                <field id="button1" translate="label comment" type="select" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Visible</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="button1_name" translate="label" type="text" sortOrder="30" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Nombre del Botón 1</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="button1">1</field>
                    </depends>
                </field>
                <field id="button1_url" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>URL del Botón 1</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="button1">1</field>
                    </depends>
                </field>
                <field id="button1_content" translate="label comment" type="editor" sortOrder="50" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Contenido del botón 1</label>
                    <frontend_model>WolfSellers\HeaderLinks\Block\Adminhtml\Editor</frontend_model>
                    <depends>
                        <field id="button1">1</field>
                    </depends>
                </field>
            </group>

            <group id="btn2" type="text" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1"
                   translate="label">
                <label>Botón 2</label>
                <field id="button2" translate="label comment" type="select" sortOrder="60" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Visible</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="button2_name" translate="label" type="text" sortOrder="70" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Nombre del Botón 2</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="button2">1</field>
                    </depends>
                </field>
                <field id="button2_url" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>URL del Botón 2</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="button2">1</field>
                    </depends>
                </field>
                <field id="button2_content" translate="label comment" type="editor" sortOrder="90" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Contenido del botón 2</label>
                    <frontend_model>WolfSellers\HeaderLinks\Block\Adminhtml\Editor</frontend_model>
                    <depends>
                        <field id="button2">1</field>
                    </depends>
                </field>
            </group>

            <group id="btn3" type="text" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1"
                   translate="label">
                <label>Botón 1</label>
                <field id="button3" translate="label comment" type="select" sortOrder="100" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Visible</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="button3_name" translate="label" type="text" sortOrder="110" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Nombre del Botón 3</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="button3">1</field>
                    </depends>
                </field>
                <field id="button3_url" translate="label" type="text" sortOrder="120" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>URL del Botón 3</label>
                    <validate>required-entry</validate>
                    <depends>
                        <field id="button3">1</field>
                    </depends>
                </field>
                <field id="button3_content" translate="label comment" type="editor" sortOrder="130" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Contenido del botón 3</label>
                    <frontend_model>WolfSellers\HeaderLinks\Block\Adminhtml\Editor</frontend_model>
                    <depends>
                        <field id="button3">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
