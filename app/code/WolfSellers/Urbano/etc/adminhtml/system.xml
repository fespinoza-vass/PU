<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="carriers" showInWebsite="1" showInStore="1" showInDefault="1">
            <group id="urbano" translate="label" sortOrder="200" showInWebsite="1" showInStore="1" showInDefault="1">
                <label>Urbano</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sandbox_mode" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Sandbox Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="30" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Title</label>
                </field>
                <field id="terrestre_name" translate="label" type="text" sortOrder="40" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Terrestre Method Name</label>
                </field>
                <field id="aereo_name" translate="label" type="text" sortOrder="50" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Aereo Method Name</label>
                </field>
                <field id="production_ws_url" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Web-Services URL (Production)</label>
                    <depends>
                        <field id="sandbox_mode">0</field>
                    </depends>
                </field>
                <field id="sandbox_ws_url" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Web-Services URL (Sandbox)</label>
                    <depends>
                        <field id="sandbox_mode">1</field>
                    </depends>
                </field>
                <field id="user" translate="label" type="text" sortOrder="80" showInStore="1" showInWebsite="1" showInDefault="1" canRestore="1">
                    <label>User</label>
                    <validate>required-entry</validate>
                </field>
                <field id="password" translate="label" type="password" sortOrder="90" showInStore="1" showInWebsite="1" showInDefault="1" canRestore="1">
                    <label>Password</label>
                    <validate>required-entry</validate>
                </field>
                <field id="line" translate="label" type="text" sortOrder="100" showInStore="1" showInWebsite="1" showInDefault="1" canRestore="1">
                    <label>Line</label>
                    <validate>required-entry</validate>
                </field>
                <field id="origin" translate="label" type="text" sortOrder="110" showInStore="1" showInWebsite="1" showInDefault="1" canRestore="1">
                    <label>Origin</label>
                    <validate>required-entry</validate>
                </field>
                <field id="contract" translate="label" type="text" sortOrder="120" showInStore="1" showInWebsite="1" showInDefault="1">
                    <label>ID Contrato</label>
                    <validate>required-entry</validate>
                </field>
                <field id="shipper" translate="label" type="text" sortOrder="130" showInStore="1" showInWebsite="1" showInDefault="1">
                    <label>ID Shipper</label>
                    <validate>required-entry</validate>
                </field>
                <field id="sender" translate="label" type="text" sortOrder="140" showInStore="1" showInWebsite="1" showInDefault="1">
                    <label>ID Remitente</label>
                    <validate>required-entry</validate>
                </field>
                <field id="package_type" translate="label" type="select" sortOrder="150" showInStore="1" showInWebsite="1" showInDefault="1">
                    <label>Package Type</label>
                    <source_model>WolfSellers\Urbano\Model\Source\Packaging</source_model>
                </field>
                <field id="sallowspecific" translate="label" type="select" sortOrder="200" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Ship to Applicable Countries</label>
                    <frontend_class>shipping-applicable-country</frontend_class>
                    <source_model>Magento\Shipping\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="210" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Ship to Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="220" showInWebsite="1" showInStore="1" showInDefault="1">
                    <label>Sort Order</label>
                </field>
            </group>
        </section>
    </system>
</config>
