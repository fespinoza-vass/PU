<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="inventory_source">
        <column xsi:type="text" name="available_shipping_methods" nullable="true"
                comment="Available Shipping Methods to Bopis integration"/>
        <column xsi:type="text" name="district" nullable="true" comment="source district"/>
        <column xsi:type="tinyint" name="is_fastshipping_active" nullable="true" default="0" comment="source fashipping active"/>
        <column xsi:type="float" name="range_radius" nullable="true" default="0" comment="source range radios"/>
    </table>
</schema>
