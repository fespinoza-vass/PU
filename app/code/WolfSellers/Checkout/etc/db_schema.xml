<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order">
        <column name="ubigeo_estimated_delivery" nullable="true" xsi:type="text" comment="Estimacioon de Entrega URBANO"/>

        <column name="customer_nombre" nullable="true" xsi:type="varchar" comment="customer name guest" length="200"/>
        <column name="customer_telefono" nullable="true" xsi:type="varchar" comment="customer telefono guest" length="200"/>
        <column name="customer_identificacion" nullable="true" xsi:type="int" comment="customer identificacion guest"  unsigned="true"/>
        <column name="customer_numero_de_identificacion" nullable="true" xsi:type="varchar" comment="customer numero_de_identificacion guest" length="200"/>
        <column name="customer_apellido" nullable="true" xsi:type="varchar" comment="customer lastname guest" length="200"/>

    </table>
    <table name="quote">
        <column name="customer_name" nullable="true" xsi:type="varchar" comment="customer name guest" length="200"/>
        <column name="customer_telefono" nullable="true" xsi:type="varchar" comment="customer telefono guest" length="200"/>
        <column name="customer_identificacion" nullable="true" xsi:type="int" comment="customer identificacion guest"  unsigned="true"/>
        <column name="customer_numero_de_identificacion" nullable="true" xsi:type="varchar" comment="customer numero_de_identificacion guest" length="200"/>
        <column name="customer_apellido" nullable="true" xsi:type="varchar" comment="customer lastname guest" length="200"/>
        <column name="customer_password" nullable="true" xsi:type="varchar" comment="customer password guest" length="200"/>
    </table>
    <table name="quote_address">
        <column name="direccion_fiscal" nullable="true" xsi:type="text" comment="Direccion fiscal"/>
        <column name="invoice_required" nullable="true" xsi:type="text" comment="Factura requerido"/>
        <column name="razon_social" nullable="true" xsi:type="text" comment="Razon social"/>
        <column name="ruc" nullable="true" xsi:type="text" comment="RUC"/>
    </table>
    <table name="sales_order_address">
        <column name="direccion_fiscal" nullable="true" xsi:type="text" comment="Direccion fiscal"/>
        <column name="invoice_required" nullable="true" xsi:type="text" comment="Factura requerido"/>
        <column name="razon_social" nullable="true" xsi:type="text" comment="Razon social"/>
        <column name="ruc" nullable="true" xsi:type="text" comment="RUC"/>
    </table>
</schema>


