<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <!--<extension_attributes for="Magento\Quote\Api\Data\AddressInterface">-->
    <extension_attributes for="Magento\Checkout\Api\Data\ShippingInformationInterface">
        <attribute code="customer_name" type="string" />
        <attribute code="customer_apellido" type="string" />
        <attribute code="customer_telefono" type="string" />
        <attribute code="customer_identificacion" type="int" />
        <attribute code="customer_numero_de_identificacion" type="string" />
        <attribute code="customer_password" type="string" />
        <attribute code="ruc" type="string" />
        <attribute code="razon_social" type="string" />
        <attribute code="direccion_fiscal" type="string" />
        <attribute code="dni" type="string" />
        <attribute code="envio_regular" type="WolfSellers\Checkout\Api\Data\EnvioRegularInterface" />
        <attribute code="envio_urbano" type="WolfSellers\Checkout\Api\Data\EnvioUrbanoInterface" />
        <attribute code="envio_rapido" type="WolfSellers\Checkout\Api\Data\EnvioRapidoInterface" />
        <attribute code="retiro_tienda" type="WolfSellers\Checkout\Api\Data\RetiroTiendaInterface" />
    </extension_attributes>

    <extension_attributes for="Magento\Quote\Api\Data\AddressInterface">
        <attribute code="ruc" type="string" />
        <attribute code="razon_social" type="string" />
        <attribute code="direccion_fiscal" type="string" />
        <attribute code="invoice_required" type="string" />
        <attribute code="dni" type="string" />
    </extension_attributes>

    <extension_attributes for="Magento\InventoryApi\Api\Data\SourceInterface">
        <attribute code="district" type="string" />
    </extension_attributes>

    <extension_attributes for="Magento\InventoryInStorePickupApi\Api\Data\PickupLocationInterface">
        <attribute code="district" type="string" />
    </extension_attributes>

    <extension_attributes for="Magento\Quote\Api\Data\AddressExtension">
        <attribute code="distrito_envio_rapido" type="string" />
        <attribute code="referencia_envio" type="string" />
        <attribute code="horarios_disponibles" type="string" />
    </extension_attributes>
</config>
