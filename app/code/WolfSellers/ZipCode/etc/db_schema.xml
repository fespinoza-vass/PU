<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="wolfsellers_zipcode" resource="default" engine="innodb" comment="wolfsellers_zipcode">
        <column xsi:type="int" name="zip_id" unsigned="true" nullable="false" identity="true" comment="Zip Id"/>
        <column xsi:type="varchar" name="country_id" nullable="false" length="10" comment="Country Id"/>
        <column xsi:type="varchar" name="region_id" nullable="false" length="50" comment="Region Id"/>
        <column xsi:type="varchar" name="departamento" length="255" comment="Departamento"/>
        <column xsi:type="varchar" name="ciudad" length="255" comment="Ciudad"/>
        <column xsi:type="varchar" name="localidad" length="255" comment="Localidad"/>
        <column xsi:type="varchar" name="postcode" length="10" comment="Postcode"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="zip_id"/>
        </constraint>
    </table>
</schema>
