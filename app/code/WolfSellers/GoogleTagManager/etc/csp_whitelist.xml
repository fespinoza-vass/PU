<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="analytics_tiktok_com" type="host">analytics.tiktok.com</value>
                <value id="js_hubspot_com" type="host">js.hubspot.com</value>
                <value id="js_usemessages_com" type="host">js.usemessages.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="td_doubleclick_net" type="host">td.doubleclick.net</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="analytics_tiktok_com" type="host">analytics.tiktok.com</value>
                <value id="forms_hscollectedforms_net" type="host">forms.hscollectedforms.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
