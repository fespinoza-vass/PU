<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <referenceBlock name="logo" />
            <referenceBlock name="top.search" remove="true" />
            <referenceBlock name="minicart" remove="true" />
            <referenceBlock name="store.menu" remove="true" />
            <referenceBlock name="top.links" remove="true" />
            <referenceBlock name="navigation.sections" remove="true" />
            <referenceBlock name="links.login" remove="true" />
            <referenceBlock name="ambanners.top" remove="true" />
        </referenceContainer>

        <referenceBlock name="checkout.success">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Vass_Checkout::onepage/success.phtml</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="footer-container" remove="true" />
    </body>
</page>