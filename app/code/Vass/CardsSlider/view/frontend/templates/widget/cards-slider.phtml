use Magento\Framework\Escaper;
use Vass\CardsSlider\Block\Widget\CardsSlider;

$images = $block->getImages();
$titles = $block->getTitle();
$descriptions = $block->getDescription();
$textUrls = $block->getTextUrl();
$urls = $block->getUrl();

?>
<div class="card-slider__wrapper">
    <div id="home-cards-slider" class="card-slider swiper">
        <div class="swiper-wrapper">
            <?php if (!empty($images) && is_array($images)): ?>
                <?php foreach ($images as $index => $image): ?>
                    <?php if ($image): ?>
                        <div class="swiper-slide">
                            <div class="card-slider__wrapper">
                                <div class="card-slider-info-img">
                                    <img class="card-slider-img"
                                         src="<?= htmlspecialchars($image, ENT_QUOTES, 'UTF-8') ?>"
                                         alt="<?= htmlspecialchars($titles[$index] ?? '', ENT_QUOTES, 'UTF-8') ?>"/>
                                </div>
                                <div class="card-slider__content">
                                    <h3 class="card-slider-title">
                                        <?= isset($titles[$index]) ? htmlspecialchars($titles[$index], ENT_QUOTES, 'UTF-8') : '' ?>
                                    </h3>
                                    <p class="card-slider-description">
                                        <?= isset($descriptions[$index]) ? htmlspecialchars($descriptions[$index], ENT_QUOTES, 'UTF-8') : '' ?>
                                    </p>
                                    <a class="card-slider-link"
                                       href="<?= isset($urls[$index]) ? htmlspecialchars($urls[$index], ENT_QUOTES, 'UTF-8') : '#' ?>">
                                        <?= isset($textUrls[$index]) ? htmlspecialchars($textUrls[$index], ENT_QUOTES, 'UTF-8') : '' ?>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <?php endif; ?>
                <?php endforeach; ?>
            <?php endif; ?>
        </div>
        <div class="swiper-pagination"></div>
    </div>
</div>
<script type="text/x-magento-init">
    {
        "#home-cards-slider": {
            "cardsSlider": {
                "slidesInDesktop": "<?= $escaper->escapeJs($block->getSlidesToShowInDesktop()) ?>",
                "slidesInTablet": "<?= $escaper->escapeJs($block->getSlidesToShowInTablet()) ?>",
                "slidesInMobile": "<?= $escaper->escapeJs($block->getSlidesToShowMobile()) ?>"
            }
        }
    }
</script>
