<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header-wrapper">
            <container name="header-logo-search" as="header-logo-search" htmlTag="div" htmlClass="header-logo-search" before="-"/>
            <container name="header-links" as="header-wrapper" htmlTag="div" htmlClass="header links">
                <container name="header-links-left" as="header-links-left" htmlTag="div" htmlClass="header-links-left" before="-">
                    <block class="Amasty\Storelocator\Block\Location" name="stores" template="Amasty_Storelocator::stores.phtml" />
                </container>
                <container name="header-links-right" as="header-links-right" htmlTag="div" htmlClass="header-links-right" after="header-links-right">
                    <block class="Magento\Wishlist\Block\Link" name="wishlist" template="Magento_Wishlist::link.phtml" before="-"/>
                </container>
            </container>
        </referenceContainer>

        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template" name="theme.js"
                   template="Magento_Theme::js/theme.phtml" after="-"/>
        </referenceContainer>

        <referenceContainer name="main.content">
            <container name="main.top.content.full" htmlTag="div" htmlClass="main-content-top-full" label="Main Content Top Full" before="-"/>
            <container name="main_wrapper" htmlTag="div" htmlClass="main-wrapper"/>
            <container name="main.content.full" htmlTag="div" htmlClass="main-content-full" label="Main Content Full" after="-">
                <container name="after.main.content.full" htmlTag="div" htmlClass="after-main-content-full" label="After Main Content Full" after="-" />
            </container>
        </referenceContainer>

        <referenceContainer name="footer-container">
            <container name="footer-top-content-full" before="footer" label="Page Footer Top Full" htmlTag="div" htmlClass="footer-top-full"/>
        </referenceContainer>

        <referenceContainer name="page.bottom.container">
            <container name="page.bottom.full" label="Before Page Footer Full" htmlTag="div" htmlClass="before-footer-full" before="-"/>
        </referenceContainer>

        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>
        <referenceContainer name="header.panel" remove="true"/>
        <referenceContainer name="header" remove="true" />
        <referenceBlock name="register-link" remove="true" />
        <referenceBlock name='catalog.compare.link' remove="true"/>
        <referenceBlock name='amsearch.full_with.trigger' remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>

        <move element="amasty.menu.toggle" destination="header-logo-search" before="-"/>
        <move element="ammenu.logo" destination="header-logo-search" after="amasty.menu.toggle"/>
        <move element="minicart" destination="header-links-right" after="wishlist"/>
        <move element="authorization-link" destination="header-links-right" after="-" />
        <move element="columns.top" destination="main_wrapper" before="-" />
        <move element="columns" destination="main_wrapper" after="columns.top" />
        <move element="breadcrumbs" destination="main_wrapper" before="-" />
    </body>
</page>
