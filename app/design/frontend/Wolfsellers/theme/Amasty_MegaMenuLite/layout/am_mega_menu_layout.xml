<?xml version="1.0"?>

<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Amasty_Base::vendor/slick/amslick.min.css"/>
    </head>

    <body>
        <attribute name="class" value="amasty-mega-menu"/>
        <referenceContainer name="header.container"
                            htmlId="ammenu-header-container"
                            htmlClass="ammenu-header-container page-header"/>
        <referenceBlock name="head.additional">
            <referenceBlock name="header-wrapper">
                <referenceBlock name="logo" remove="true"/>
                <referenceBlock name="header.navigation.icon" remove="true"/>
                <block class="Amasty\MegaMenuLite\Block\Container"
                       name="amasty.menu.toggle"
                       before="-"
                       template="Amasty_MegaMenuLite::components/toggle.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">
                            Amasty\MegaMenuLite\ViewModel\Store\Menu
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Theme\Block\Html\Header\Logo"
                       name="ammenu.logo"
                       after="amasty.menu.toggle"
                       template="Amasty_MegaMenuLite::components/logo.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">
                            Amasty\MegaMenuLite\ViewModel\Header\Logo
                        </argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceBlock>
        <referenceContainer name="page.top">
            <referenceBlock name="navigation.sections">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Amasty_MegaMenuLite::sections.phtml</argument>
                </action>
                <block class="Amasty\MegaMenuLite\Block\Container"
                       name="amasty.store.menu"
                       template="Amasty_MegaMenuLite::container.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">
                            Amasty\MegaMenuLite\ViewModel\Store\Menu
                        </argument>
                        <argument name="jsLayout" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="lite" xsi:type="object">
                                    Amasty\MegaMenuLite\Model\DataProvider\Config\Lite
                                </item>
                            </item>
                            <item name="components" xsi:type="array">
                                <item name="ammenu_tabs_wrapper" xsi:type="array">
                                    <item name="component" xsi:type="string">
                                        Amasty_MegaMenuLite/js/components/tabs
                                    </item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_wrapper</item>
                                    </item>
                                </item>
                                <item name="ammenu_account_wrapper" xsi:type="array">
                                    <item name="component" xsi:type="string">
                                        Amasty_MegaMenuLite/js/components/account
                                    </item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_wrapper</item>
                                    </item>
                                </item>
                                <item name="ammenu_hamburger_wrapper" xsi:type="array">
                                    <item name="component" xsi:type="string">
                                        Amasty_MegaMenuLite/js/hamburger_menu/hamburger_menu
                                    </item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_wrapper</item>
                                    </item>
                                </item>
                                <item name="ammenu_submenu_wrapper" xsi:type="array">
                                    <item name="component" xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">
                                            Amasty_MegaMenuLite/submenu/wrapper
                                        </item>
                                        <item name="imports" xsi:type="array">
                                            <item name="color_settings" xsi:type="string">index = ammenu_wrapper:color_settings</item>
                                            <item name="animation_time" xsi:type="string">index = ammenu_wrapper:animation_time</item>
                                        </item>
                                    </item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_wrapper</item>
                                    </item>
                                </item>
                                <item name="ammenu_submenu_simple" xsi:type="array">
                                    <item name="component" xsi:type="string">
                                        Amasty_MegaMenuLite/js/submenu/simple
                                    </item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_wrapper</item>
                                    </item>
                                </item>
                                <item name="ammenu_hamburger_toggle" xsi:type="array">
                                    <item name="component" xsi:type="string">
                                        Amasty_MegaMenuLite/js/components/hamburger_toggle
                                    </item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_wrapper</item>
                                    </item>
                                </item>
                                <item name="ammenu_overlay_wrapper" xsi:type="array">
                                    <item name="component" xsi:type="string">
                                        Amasty_MegaMenuLite/js/components/overlay
                                    </item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_hamburger_toggle</item>
                                    </item>
                                </item>
                                <item name="ammenu_columns_wrapper" xsi:type="array">
                                    <item name="component" xsi:type="string">uiComponent</item>
                                    <item name="template" xsi:type="string">Amasty_MegaMenuLite/components/tree/columns</item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_wrapper</item>
                                    </item>
                                </item>
                                <item name="ammenu_tree_wrapper" xsi:type="array">
                                    <item name="component" xsi:type="string">Amasty_MegaMenuLite/js/components/tree</item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_wrapper</item>
                                    </item>
                                </item>
                                <item name="ammenu_sidebar_menu_wrapper" xsi:type="array">
                                    <item name="component" xsi:type="string">
                                        Amasty_MegaMenuLite/js/sidebar_menu/sidebar_menu
                                    </item>
                                    <item name="deps" xsi:type="array">
                                        <item name="0" xsi:type="string">index = ammenu_wrapper</item>
                                    </item>
                                </item>
                            </item>
                            <item name="settings" xsi:type="array">
                                <item name="switcher" xsi:type="object">
                                    Amasty\MegaMenuLite\Model\DataProvider\Switcher
                                </item>
                                <item name="currency" xsi:type="object">
                                    Amasty\MegaMenuLite\Model\DataProvider\Currency
                                </item>
                            </item>
                        </argument>
                    </arguments>
                    <block class="Magento\Framework\View\Element\Template"
                           name="ammenu.top.menu"
                           template="Amasty_MegaMenuLite::components/top_menu/wrapper.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">
                                Amasty\MegaMenuLite\ViewModel\Store\Menu
                            </argument>
                        </arguments>
                        <block class="Magento\Framework\View\Element\Template"
                               name="ammenu.top.menu.item"
                               template="Amasty_MegaMenuLite::components/top_menu/item.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">
                                    Amasty\MegaMenuLite\ViewModel\Store\Menu
                                </argument>
                            </arguments>
                            <block class="Magento\Framework\View\Element\Template"
                                   name="ammenu.top.menu.link"
                                   template="Amasty_MegaMenuLite::components/link.phtml">
                                <arguments>
                                    <argument name="view_model" xsi:type="object">
                                        Amasty\MegaMenuLite\ViewModel\Store\Menu
                                    </argument>
                                </arguments>
                                <block class="Magento\Framework\View\Element\Template"
                                       name="ammenu.top.menu.icon"
                                       template="Amasty_MegaMenu::components/icon.phtml">
                                    <arguments>
                                        <argument name="view_model" xsi:type="object">
                                            Amasty\MegaMenuLite\ViewModel\Store\Menu
                                        </argument>
                                    </arguments>
                                </block>
                            </block>
                        </block>
                    </block>
                </block>
                <referenceBlock name="amtheme.store.compare" remove="true"/>
                <referenceBlock name="store.links" remove="true"/>
                <referenceBlock name="store.settings" remove="true"/>
            </referenceBlock>
        </referenceContainer>
        <move element="top.search" destination="header-wrapper" after="ammenu.logo" />
    </body>
</layout>
